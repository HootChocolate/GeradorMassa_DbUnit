public class MassaService {

	private static Faker faker = new Faker();
	private static String tipo = "CONTA_SrB";
	private static MassaDAOImpl dao;
	
	public MassaService() {
		dao = new MassaDAOImpl();
	}
	
	/**Chama um método na classe MassaDAOImpl de inserção de dados, que insere uma conta no banco, dentro da tabela 'Massas'
	 * 
	 * @throws Exception
	 */
	public static void inserirDadoNoBanco_tabelaMassaDeDados(String tipo, String valor) throws Exception {
		dao.inserirConta(tipo, valor);
	}
	
	public static String obterValorDadoDoBanco_tabelaMassaDeDados(String tipo) throws Exception {
		return dao.obterValorConta(tipo);
	}
	

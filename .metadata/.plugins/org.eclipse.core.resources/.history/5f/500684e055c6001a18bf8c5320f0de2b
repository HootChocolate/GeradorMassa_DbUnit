package br.ce.wcaquino.service;

import br.ce.wcaquino.dao.impl.MassaDAOImpl;

public class MassaService {

	private static MassaDAOImpl dao;
	
	public MassaService() {
		dao = new MassaDAOImpl();
	}
	
	/**Chama um método na classe MassaDAOImpl de inserção de dados, que insere uma conta no banco, dentro da tabela 'Massas'
	 * 
	 * @throws Exception
	 */
	public static void inserirDadoNoBanco_tabelaMassaDeDados(String tipo, String nome) throws Exception {
		dao.inserirConta(tipo, nome);
	}
	
	public static void main(String[] args) throws Exception {
		
		dao = new MassaDAOImpl();
	
		// Insere 5 registro na tabela de massas
		for(int i = 0; i < 5 ; i++) {
			inserirDadoNoBanco_tabelaMassaDeDados();
		}
	}
}

package Utils;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class BaseUtil {

	WebDriver navegador = null;
	
	public WebDriver getChromeWebDriver(String site) {
		System.setProperty("webdriver.chrome.driver", "/home/jay/programs/ChromeDriver/chromedriver");
		
		navegador = new ChromeDriver();
		
		navegador.get(site);
		navegador.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
		
		return navegador;
	}
	
	public String getResultadoDaOperacao() {
		return navegador.findElement(By.className("alert alert-success")).getText();
	}
	
}

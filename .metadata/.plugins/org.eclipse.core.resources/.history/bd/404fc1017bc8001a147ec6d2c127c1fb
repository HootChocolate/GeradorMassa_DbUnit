				"INSERT INTO usuarios"
				+ "(id, nome, email, senha, conta_principal_id) "
				+ "VALUES (1, 'Usuario de teste', 'teste@gmail.com', '123', 1)").execute();
		JDBC.prepareStatement(
				"INSERT INTO contas(id, nome, usuario_id )  " 
				+ "VALUES (2 , 'Conta para consultar', 1)," 
				+ "	(3 , 'Conta para alterar', 1)," 
				+ "	(4 , 'Conta para deletar', 1);").execute();
		
	}
	
	@Test
	public void testInserirConta() {
		
	}
	

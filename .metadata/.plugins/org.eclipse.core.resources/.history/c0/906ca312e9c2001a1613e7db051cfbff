package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class EditarContaPage {

	WebDriver navegador = null;
	
	public EditarContaPage(WebDriver navegador) {
		this.navegador = navegador;
	}
	
	public EditarContaPage inserirNovoValorNoCampoNome(WebDriver navegador, String nome) {
		WebElement inputNome = navegador.findElement(By.id("nome"));
		inputNome.clear();
		
		inputNome.sendKeys(nome);
		
		return this;
		
	}
	
	public ListaDeContasPage clicarNoBotaoSalvar(WebDriver navegador) {
		
		navegador.findElement(By.tagName("button")).click();
		
		return new ListaDeContasPage(navegador);
	}
	
	public ListaDeContasPage informarNovoValor(WebDriver navegador, String nome) {
		inserirNovoValorNoCampoNome(navegador, nome);
		return clicarNoBotaoSalvar(navegador);
	}
}

package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class LoginPage {

	WebDriver navegador;
	
	public LoginPage(WebDriver navegador) {
		this.navegador = navegador;
	}
	
	public LoginPage informarLogin(String login) {
		
		navegador.findElement(By.id("email")).sendKeys(login);
		
		return this;
	}
	
	public LoginPage informarSenha(String senha) {
		
		navegador.findElement(By.id("senha")).sendKeys(senha);
		
		return this;
	}
	
	public LoginPage realizarLogin(String login, String senha) {
		
		
		
		return this;
	}
	
	public HomePage clicaNoBotaoEntrar() {
		
		navegador.findElement(By.tagName("button")).click();
		
		return new HomePage(navegador);
	}
	
}

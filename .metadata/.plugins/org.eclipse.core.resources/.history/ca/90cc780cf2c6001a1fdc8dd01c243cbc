package seuBarrigaPontoCom_Estrategia3;

import java.sql.SQLException;

import br.ce.wcaquino.entidades.ContaSeuBarriga;

public interface MassaDAO {

	public void inserirConta(String tipo, String valor) throws Exception;
	
	public ContaSeuBarriga obterValorConta(String valor) throws Exception;
	
	public long obterIdDaConta(String nomeConta) throws Exception;
	
	public void alterarUsadoParaFalso(long id) throws Exception;

	long obterIdDaConta(ContaSeuBarriga contaSeuBarriga) throws ClassNotFoundException, SQLException;

}
